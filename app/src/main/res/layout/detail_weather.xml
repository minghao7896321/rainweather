<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DetailWeatherActivity">

    <ImageView
        android:id="@+id/detail_pic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <Button
                android:id="@+id/detail_backmain_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/ic_back" />

            <TextView
                android:id="@+id/detail_title_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_below="@id/detail_title"
            android:background="#8000">

            <TextView
                android:id="@+id/Layout_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="3"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="4"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="5"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="6"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Layout_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:gravity="center"
                android:text="7"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:scaleType="matrix"
            android:src="@drawable/scrollbar" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollbar">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

</FrameLayout>